<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/settingbg"
    tools:context="com.vit.ayush.vibrance18.fragment.SettingsFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:src="@drawable/intrologo" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/stylebutton"
            android:text="Change Password"
            android:textStyle="bold"
            android:id="@+id/changebtn"
            android:fontFamily="@font/roboto_medium"
            android:textSize="14dp"
            android:textColor="@color/lightorange"
            android:visibility="visible"/>
        <TextView
            android:layout_width="match_parent"
            android:id="@+id/idchange"
            android:layout_height="wrap_content"
            android:hint="Username"
            android:textAlignment="center"
            android:textSize="20dp"
            android:fontFamily="@font/roboto_medium"
            android:layout_margin="10dp"
            android:visibility="gone"/>

        <EditText
            android:id="@+id/passchange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="New Password"
            android:layout_margin="10dp"
            android:inputType="textPassword"
            android:visibility="gone"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/stylebutton"
            android:text="Change Password"
            android:visibility="gone"
            android:textStyle="bold"
            android:id="@+id/submitnewbtn"
            android:fontFamily="@font/roboto_medium"
            android:textSize="14dp"
            android:textColor="@color/lightorange"/>


    </LinearLayout>

    <pl.droidsonroids.gif.GifTextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="220dp"
        android:layout_marginStart="220dp"
        android:layout_marginBottom="-12dp"
        android:background="@drawable/ferris" />

</RelativeLayout>
