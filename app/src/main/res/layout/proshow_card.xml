<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    app:cardUseCompatPadding="true"
    >
<android.support.constraint.ConstraintLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:padding="2dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/upper"
            android:layout_width="match_parent"
            android:layout_height="300dp"

            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/proshownameL"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:weightSum="3"
                android:orientation="vertical" >
                <View
                    android:layout_width="1dp"
                    android:layout_height="0dp"
                    android:layout_weight=".2"/>
                <TextView
                    android:id="@+id/proshowname"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:textSize="38sp"
                    android:padding="15dp"
                    android:gravity="center_horizontal"
                    android:text="D"
                    android:layout_weight="2.6"
                    android:textColor="@color/font_card_col"
                    android:fontFamily="@font/roboto_medium"
                    android:textAlignment="center"
                    />
                <View
                        android:layout_width="20dp"
                        android:layout_height="0dp"
                        android:layout_weight=".2"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/proshowimg"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:elevation="5dp"

                android:adjustViewBounds="true"
                android:src="@drawable/album2"
                android:padding="10dp"
                android:contentDescription="ProShow" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/middle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/upper"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/comboname"
                android:layout_width="match_parent"
                android:padding="5dp"
                android:textSize="28sp"
                android:gravity="center"
                android:layout_marginBottom="5dp"
                android:text="Combo"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/font_card_col"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginBottom="2dp"
            android:layout_below="@+id/middle"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/proshowdate"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Date"
                android:gravity="center_horizontal"
                android:textSize="18sp"

                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                >

                <TextView
                    android:id="@+id/proshowprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_rupee_indian"
                    android:layout_marginEnd="11dp"
                    android:layout_marginRight="11dp"
                    android:text="@string/rupee"
                    android:textSize="18dp"
                    android:drawableLeft="@drawable/ic_rupee_indian" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>