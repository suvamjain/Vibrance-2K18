<?xml version="1.0" encoding="utf-8"?>


    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/teecard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardElevation="3dp"
        android:layout_margin="2dp"

        >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <HorizontalScrollView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp">
                    <LinearLayout
                        android:id="@+id/tees_img_L"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:orientation="horizontal"
                        android:scrollbars="horizontal"
                        >
                        <ImageView
                            android:layout_width="350dp"
                            android:layout_height="300dp"
                            android:layout_marginRight="3dp"
                            android:layout_marginEnd="3dp"
                            android:layout_marginTop="3dp"
                            android:id="@+id/teeimgS"
                            android:adjustViewBounds="true"
                            android:elevation="5dp"
                            />
                        <ImageView
                            android:layout_width="350dp"
                            android:layout_height="300dp"
                            android:layout_marginRight="3dp"
                            android:layout_marginEnd="3dp"
                            android:layout_marginTop="3dp"
                            android:id="@+id/teeimgF"
                            android:adjustViewBounds="true"
                            android:elevation="5dp"
                            />
                        <ImageView
                            android:layout_width="350dp"
                            android:layout_height="300dp"
                            android:layout_marginRight="3dp"
                            android:layout_marginEnd="3dp"
                            android:layout_marginTop="3dp"
                            android:id="@+id/teeimgB"
                            android:adjustViewBounds="true"
                            android:elevation="5dp"
                            />

                    </LinearLayout>
                </HorizontalScrollView>
                <LinearLayout
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">
                    <TextView
                        android:id="@+id/teename"
                        android:layout_width="0dp"
                        android:layout_weight="1.4"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:layout_marginLeft="2dp"
                        android:fontFamily="@font/roboto_medium"
                        android:textAlignment="center"
                        android:maxLines="2"
                        android:layout_gravity="center"
                        android:text="@string/tee_title"
                        android:textColor="@color/font_card_col"
                        android:textSize="21sp" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_buy"
                        android:layout_gravity="center"
                        android:layout_marginLeft="-70dp"
                        android:layout_weight="0.8"
                        android:layout_marginRight="10dp"/>

                    <TextView
                        android:id="@+id/teeprice"
                        android:layout_width="0dp"
                        android:layout_weight="0.8"
                        android:layout_height="wrap_content"
                        android:drawablePadding="1dp"
                        android:drawableStart="@drawable/ic_status"

                        android:paddingBottom="10dp"

                        android:textSize="20sp"
                        android:layout_marginRight="2dp"
                        android:layout_marginEnd="2dp"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:text="@string/rupee"
                        android:drawableLeft="@drawable/ic_status"
                        />
                </LinearLayout>
            </LinearLayout>


    </android.support.v7.widget.CardView>
